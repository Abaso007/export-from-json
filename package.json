{
  "name": "export-from-json",
  "version": "1.0.1",
  "description": "export to txt, json, csv, xls format file from valid JavaScript JSON object.",
  "main": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/types/index.d.ts",
  "repository": "https://github.com/zheeeng/export-from-json",
  "author": "Zheeeng",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "tsc -p ./config/tsconfig.esm.json",
    "build:umd": "rollup -c ./config/rollup.config.js",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:lint": "tslint -p ./tsconfig.json",
    "test:manual": "npm test && npm build && open index.html"
  },
  "files": [
    "src",
    "dist",
    "example"
  ],
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "jest": "^22.3.0",
    "rollup": "^0.56.1",
    "rollup-plugin-typescript2": "^0.11.1",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/__tests__/.+\\.spec.ts$",
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
