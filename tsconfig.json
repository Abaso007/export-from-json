{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/*"
  ]
}
